<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.phonebook.ContactsViewController">

        <Label fx:id="CategoryLabel" text="Label">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <TextField fx:id="SearchText" minWidth="200.0">
            <VBox.margin>
                <Insets bottom="8.0" left="40.0" right="40.0" />
            </VBox.margin>
