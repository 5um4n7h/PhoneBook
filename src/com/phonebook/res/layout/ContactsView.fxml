                <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                </padding>
            </VBox>


        </HBox>
        <HBox alignment="CENTER">

            <Button fx:id="CreateContactButton" mnemonicParsing="false" text="Create New Contact">
